    "definitions": {
        "entity.UserAddDTO": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "example@imgo.com"
                },
                "full_name": {
                    "type": "string",
                    "maxLength": 3,
                    "example": "Lich Truong"
                },
                "password": {
                    "type": "string",
                    "example": "W3^\u0026(80)\u0026\u0026^x"
                },
                "username": {
                    "type": "string",
                    "format": "^[a-zA-Z0-9]+(?:-[a-zA-Z0-9]+)*$",
                    "example": "lichtv"
                }
            }
        },
        "entity.UserResponseDTO": {
            "type": "object",
