                },
                "email": {
                    "type": "string",
                    "example": "example@imgo.com"
                },
                "full_name": {
                    "type": "string",
                    "example": "Lich Truong"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "modified_at": {
                    "type": "string",
                    "example": "2020-07-15 10:10:10"
                },
                "status": {
                    "type": "integer",
                    "example": 1
                },
                "username": {
                    "type": "string",
                    "example": "lichtv"
                }
            }
        }
    }
