            "post": {
                "description": "Author: LichTV",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "identity"
                ],
                "summary": "Add a new user",
                "parameters": [
                    {
                        "enum": [
                            "en",
                            "vi"
                        ],
                        "type": "string",
                        "description": "string",
                        "name": "lang",
                        "in": "query"
                    },
                    {
                        "description": "Add a new user body",
                        "name": "UserAddDTO",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/entity.UserAddDTO"
